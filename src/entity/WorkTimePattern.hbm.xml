<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entity.WorkTimePattern" table="WorkTimePattern">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="circleDays" type="java.lang.Integer">
            <column name="circleDays" length="150" not-null="false" />
        </property>
        <property name="name" type="java.lang.String">
            <column name="name" length="50" not-null="false" />
        </property>
        <property name="description" type="java.lang.String">
            <column name="description" length="255" not-null="false" />
        </property>
        <property name="calPubHolidayFlag" type="java.lang.Boolean">
            <column name="calPubHolidayFlag" not-null="false" />
        </property>
        <property name="calSpecialDayFlag" type="java.lang.Boolean">
            <column name="calSpecialDayFlag" not-null="false" />
        </property>
        <property name="applyLeaveIgnorePublicHolidayFlag" type="java.lang.Boolean">
            <column name="applyLeaveIgnorePublicHolidayFlag" not-null="false" />
        </property>
        <property name="initialAnnualLeaveDays" type="java.lang.Double">
            <column name="initialAnnualLeaveDays" length="255" not-null="false" />
        </property>
        <property name="addAnnualHoursPM" type="java.lang.Double">
            <column name="addAnnualHoursPM" length="255" not-null="false" />
        </property>
        <property name="initialSickLeaveDays" type="java.lang.Double">
            <column name="initialSickLeaveDays" length="255" not-null="false" />
        </property>
        <property name="addSickHoursPM" type="java.lang.Double">
            <column name="addSickHoursPM" length="255" not-null="false" />
        </property>
        <property name="dayWorkHours" type="java.lang.Double">
            <column name="dayWorkHours" length="255" not-null="false" />
        </property>
        
        <set name="allCircleDays" inverse="true" lazy="false" fetch="select" order-by="daySeq ASC">
        	<key column="workTimePatternId" />
        	<one-to-many class="entity.EachCircleDay" />
        </set>
        <set name="allSpecialDays" inverse="true" lazy="false" fetch="select" order-by=" ASC">
        	<key column="workTimePatternId" />
        	<one-to-many class="entity.MP0010" />
        </set>
        
    </class>
</hibernate-mapping>