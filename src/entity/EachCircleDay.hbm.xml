<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entity.EachCircleDay" table="EachCircleDay">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="daySeq" type="java.lang.Integer">
            <column name="daySeq" not-null="false" />
        </property>
        <property name="description" type="java.lang.String">
            <column name="description" length="255" not-null="false" />
        </property>
        <property name="name" type="java.lang.String">
            <column name="name" length="40" not-null="false" />
        </property>
        <property name="overTimeRate" type="java.lang.Double">
            <column name="overTimeRate" length="40" not-null="false" />
        </property>
        <!-- <property name="workTimePatternId" type="java.lang.Integer">
            <column name="workTimePatternId" length="40" not-null="false" />
        </property> -->
        <many-to-one name="workTimePattern" class="entity.WorkTimePattern" fetch="select">
        	<column name="workTimePatternId" not-null="true"/>
        </many-to-one>
        
		<set name="detailWorkTimeItems" inverse="true" lazy="false" fetch="select" order-by="id ASC">
			<key>
				<column name="eachCircleDayId" not-null="true"/>
			</key>
			<one-to-many class="entity.DetailDayWorkTime"/>
		</set>
    </class>
</hibernate-mapping>